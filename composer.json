{
    "name": "nitropack/magento2-extension",
    "description": "The official NitroPack extension for Magento 2.3 and Magento 2.4.",
    "require": {
        "nitropack/nitropackcloud-sdk": "^0.53.0"
    },
    "type": "magento2-module",
    "keywords": [
        "magento2",
        "extension",
        "nitropack",
        "performance",
        "speed",
        "cwv",
        "cloud",
        "cache",
        "ecommerce",
        "cdn"
    ],
    "version": "2.1.0",
    "license": "MIT",
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "NitroPack\\NitroPack\\": ""
        }
    },
    "scripts": {
        "install-cmd": [
            "NitroPack\\NitroPack\\Observer\\ComposerScript::preInstall"
        ],
        "post-install-cmd": [
            "@install-cmd"
        ],
        "post-update-cmd": [
            "@install-cmd"
        ],
        "uninstall-cmd": [
            "NitroPack\\NitroPack\\Observer\\ComposerScript::composerUninstall"
        ],
        "pre-package-uninstall": [
            "@uninstall-cmd"
        ]
    }
}
